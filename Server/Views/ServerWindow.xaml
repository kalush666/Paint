<Window x:Class="Server.Views.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Saved Sketches"
                   FontWeight="Bold"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   Grid.Row="0" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding Sketches}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,5"
                                    HorizontalAlignment="Center">
                            <Button Content="{Binding Name}"
                                    Padding="10,5"
                                    MinWidth="150"
                                    Margin="0,0,10,0" />
                            <Button Content="Delete"
                                    Padding="10,5"
                                    MinWidth="80"
                                    Background="LightCoral"
                                    Command="{Binding DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button x:Name="SuspendButton"
                Content="Suspend"
                Width="120"
                MinWidth="100"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Margin="0,10,0,10"
                Click="SuspendButton_OnClick"
                Grid.Row="2" />
    </Grid>
</Window>